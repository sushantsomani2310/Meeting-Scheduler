<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@color/colorRecyclerGray">

    <TextView
            tools:text="11:00AM -"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_time_textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="@color/colorDarkGray"
            android:textStyle="bold"/>
    <TextView
            tools:text="12:00PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/end_time_textView"
            app:layout_constraintBottom_toBottomOf="@+id/start_time_textView"
            app:layout_constraintStart_toEndOf="@+id/start_time_textView" android:layout_marginStart="4dp"
            android:textSize="16sp"
            android:textColor="@color/colorDarkGray"
            android:textStyle="bold"/>

    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@android:color/darker_gray"
          app:layout_constraintTop_toBottomOf="@+id/end_time_textView"
          android:layout_marginTop="4dp" android:id="@+id/view2"/>

    <TextView
            tools:text="iOS development session 1.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description_textView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:paddingRight="16dp"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>

    <View android:layout_width="match_parent" android:layout_height="2dp"
          android:background="@android:color/black"
          app:layout_constraintTop_toBottomOf="@+id/description_textView"
          android:layout_marginTop="8dp" />
</android.support.constraint.ConstraintLayout>
